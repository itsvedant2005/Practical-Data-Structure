#include<stdio.h>
int main(){
    int a[10],i,old,new;

    printf("Enter the array elements:");
    for ( i = 0; i < 10; i++){
    
        scanf("%d",&a[i]);
    }

    printf("Enter the element which you want to update:");
    scanf("%d",&old);

    printf("Enter the new element:");
    scanf("%d",&new);

    for ( i = 0; i < 10; i++)
    {
        if (a[i]==old)
        {
            a[i]=new;
        }
        
    }

    printf("The new Array is\n");
    for ( i = 0; i < 10; i++)
    {
        printf("%d\n",a[i]);
    }
    
}
